{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    {% set disabled = false %}
<section class="section" id="content">
    <div class="column column is-6 is-offset-3">
        {% if not form.vars.valid %}
            <article class="message is-danger">
                <div class="message-body">
                    {% for children in form.children %}
                        {% if not children.vars.valid %}
                            {{ form_errors(children) }}
                        {% endif %}
                    {% endfor %}
                </div>
            </article>
        {% endif %}
        <div class="card">
            <div class="card-content">
                <div class="content">
                    <div class="header">
                        <h3 class="card-title">
                            Envoyez un message
                        </h3>
                    </div>
                    <hr>
                    {{ form_start(form) }}
                    <div class="field">
                        <label class="label">{{ form_label(form.firstname) }}</label>

                        <div class="control has-icons-left has-icons-right" v-if="">
                            {{ form_widget(form.firstname, { 'attr': {'class': 'input', 'disabled': disabled} }) }}
                            <span class="icon is-small is-left">
                                    <i class="fas fa-user"></i>
                                </span>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">{{ form_label(form.lastname) }}</label>

                        <div class="control has-icons-left has-icons-right">
                            {{ form_widget(form.lastname, { 'attr': {'class': 'input', 'disabled': disabled} }) }}
                            <span class="icon is-small is-left">
                                    <i class="fas fa-user"></i>
                                </span>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">{{ form_label(form.email) }}</label>

                        <div class="control has-icons-left has-icons-right">
                            {{ form_widget(form.email, { 'attr': {'class': 'input', 'disabled': disabled} }) }}
                            <span class="icon is-small is-left">
                                    <i class="fas fa-envelope"></i>
                                </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">{{ form_label(form.reason) }}</label>

                        <div class="select">
                            {{ form_widget(form.reason) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">{{ form_label(form.message) }}</label>

                        {{ form_widget(form.message, { 'attr': {'class': 'textarea'} }) }}
                    </div>

                    <div class="field">
                        <button type="submit" class="button is-block is-primary is-fullwidth is-medium">
                            <span class="icon">
                                <i class="fas fa-paper-plane"></i>
                            </span>
                            <span> Envoyer mon message </span>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
